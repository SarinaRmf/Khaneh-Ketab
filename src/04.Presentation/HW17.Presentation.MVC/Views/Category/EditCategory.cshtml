@using HW17.Domain.DTOs
@{
    Layout = "_Layout";
}

@model GetCategoryDto

<head>
    <style>
        .form-row {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: flex-end; 
        gap: 15px;
        padding: 20px;
        margin: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 0 8px rgba(0,0,0,0.1);
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .form-group label {
        font-size: 14px;
        color: #333;
        margin-bottom: 5px;
    }

    .form-group input[type="text"],
    .form-group input[type="file"],
    .form-group select {
        padding: 8px 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 14px;
        min-width: 180px;
    }

    .form-group button {
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 6px;
        padding: 8px 15px;
        cursor: pointer;
        font-size: 14px;
        transition: 0.3s;
    }

    .form-group button:hover {
        background-color: #0056b3;
    }
    </style>
</head>

<div class="container">
    <div class="card">
        <h2>ویرایش</h2>

        <form asp-action="EditCategory"  method="post" enctype="multipart/form-data" class="form-row">
            
            <div class="form-group">
                <input asp-for="Id" type="hidden"/>
            </div>

            <div class="form-group">
                <label asp-for="Name">دسته بندی</label>
                <input asp-for="Name" type="text" placeholder="مثلاً: تاریخی" required />
            </div>

            <div class="form-group">
                <label asp-for="Description">توضیحات</label>
                <input asp-for="Description" type="text" placeholder="باستانی و معاصر" required />
            </div>

            <div style="margin-top:12px;">
                <div style="display:flex; align-items:center; gap:10px; padding:10px; border:1px solid #e5e7eb; border-radius:8px;">
                    <label asp-for="Imgfile" style="margin:0;">عکس</label>
                    <input type="file" asp-for="Imgfile" src="@Model.ImagePath">
                </div>
            </div>

            <button class="btn" type="submit">‌ذخیره تغییرات</button>

        </form>
        <div class ="message-box">
            <p>
                @ViewBag.AddError
            </p>
        </div>
    </div>
</div>
