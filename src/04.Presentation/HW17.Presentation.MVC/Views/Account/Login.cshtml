*@
@model LoginViewModel;
@{
    Layout = "_Layout";
}

<head>  
    <style>
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            direction: rtl;
        }

        .card {
            width: 350px;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(20,30,60,0.08);
            padding: 24px;
        }

        .card h2 {
            font-size: 20px;
            margin-bottom: 40px;
            text-align: center;
            color: #1f2937;
        }

        .form-group {
            margin-bottom: 12px;
        }

        label {
            display: block;
            font-size: 20px;
            margin-bottom: 6px;
            color: #374151;
            text-align: right; 
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            font-size: 14px;
        }

        .btn {
            width: 100%;
            background: #3b82f6;
            color: #fff;
            padding: 10px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-size: 16px;
            margin-top: 10px;
        }

        .btn:hover {
            background: #2563eb;
        }
        .note {
            text-align: center;
            margin-top: 12px;
            font-size: 14px;
            color: #374151;
        }

        .note a {
            color: #2563eb;
            text-decoration: none;
        }

        .note a:hover {
            text-decoration: underline;
        }
        .message-box {
            margin-top: 12px;
            font-size: 14px; 
            color: #dc2626; 
            text-align: center;
        }
    </style>
</head>

<div class="container">
    <div class="card">
        <h2 id="login-title">ورود به حساب</h2>

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Username">نام کاربری</label>
                <input asp-for="Username" type="text" placeholder="مثلاً: sara" required />
            </div>

            <div class="form-group">
                <label asp-for="Password">رمز عبور</label>
                <input asp-for="Password" type="password" placeholder="رمزتان را وارد کنید" required />
            </div>

            <button class="btn" type="submit">ورود</button>
            <p class="note">حساب کاریری ندارید؟ <a asp-action="Register">‌ثبت نام کنید</a></p>
        </form>
        <div class ="message-box">
            <p>
                @ViewBag.LoginError
            </p>
        </div>
    </div>
</div>
